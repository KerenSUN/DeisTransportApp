extends layout

block content
  //-section:schedules
  
  .section
    .container
      .row
        .col-md-12.text-center 
          h2.section-title Schedules
          p.section-description This page allows you view schedules of the various shuttles provided by Brandeis.
        .col-md-12
          form#schdl.form(method="post" role="form" action="getSchedule")
            .row
              .col-md-12.form-group
                select.form-control#van(name="schedule" placeholder="Select a van")
                  option Select a van
                  option(value="2010") Campus BranVan (Weekdays)
                  option(value="2011") Campus BranVan (Weekends)
                  option(value="2020") Daytime Campus Shuttle
                  option(value="3020") Daytime Waltham Shuttle
                  option(value="3010") Evening Waltham Shuttle
                  option(value="1010") Boston/Cambridge Shuttle (Thurs)
                  option(value="1020") Boston/Cambridge Shuttle (Fri)
                  option(value="1030") Boston/Cambridge Shuttle (Sat)
                  option(value="1040") Boston/Cambridge Shuttle (Sun)
            br
            .row
              .col-md-12.form-group.text-center
                button.btn.btn-primary(type="submit" value="submit") Get Schedules
        .co-md-12.text-center        
          .row
            if name == "Campus BranVan (Weekdays)" || name == "Daytime Campus Shuttle" || name == "Evening Waltham Shuttle" || name == "Campus BranVan (Weekends)"
              h2 #{name}
              table#disp.table.table-dark
                thead
                  tr
                    th(scope="col") Stops
                    th(scope="col") Times
                tbody
                  each stop in data
                    tr
                      td(scope="row") #{stop.stop}
                      //- each time in stop
                      //-   - function format_times(times){return times};
                      td(scope="row") #{stop.times}
                        
                        //- td(scope="row") #{stop.times}
              //- ol
              //-   each stop in data
              //-     li
              //-       - function format_times(times){return "times"};
              //- 
              //-         e #{stop.stop}
              //-         i #{format_times(stop.times)}
          
  script(type="text/javascript" language="javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
  script(type="text/javascript").
